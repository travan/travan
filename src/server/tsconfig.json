{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Source directory containing TypeScript files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".env"
  ]
}